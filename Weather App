import requests

url = "https://api.weatherapi.com/v1/current.json?key=<Your API key>&q="

city = input("Enter name of city: ")

url = url + city

try:
    link = requests.get(url)
    response = link.json()

    cityC = response["location"]["name"]
    state = response["location"]["region"]
    country = response["location"]["country"]
    celsius = response["current"]["temp_c"]
    fahrenheit = response["current"]["temp_f"]
    wind = response["current"]["wind_kph"]

    finalOutput = (f"You are looking weather info for {cityC} which is located in {state}/{country}.\n"
                   f"Weather is {celsius}°C or {fahrenheit}°F.\n"
                   f"Wind Speed: {wind} km/h")

    print(finalOutput)

except:
    if link.status_code == 400:
        error_code = response.get["error"]["code"]

        if error_code == 1006:
            print("Please provide a valid city.")
